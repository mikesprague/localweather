// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
{
  "name": "JS",
  "build": {
    "dockerfile": "Dockerfile",
    // Update 'VARIANT' to pick a Node version: 14, 16, 18
    "args": { "VARIANT": "18" }
  },

  // Set *default* container specific settings.json values on container create.
  "settings": {
    "git.enableCommitSigning": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontWeight": "400",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "Operator Mono Lig, Dank Mono, Cascadia Code, Victor Mono, Fira Code"
  },

  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "2gua.rainbow-brackets",
    "aaron-bond.better-comments",
    "albert.TabOut",
    "alexdima.copy-relative-path",
    "andrewmcodes.tailwindcss-extension-pack",
    "austenc.tailwind-docs",
    "bierner.color-info",
    "bierner.emojisense",
    "bradlc.vscode-tailwindcss",
    "BriteSnow.vscode-toggle-quotes",
    "bungcip.better-toml",
    "christian-kohler.path-intellisense",
    "chrmarti.regex",
    "codezombiech.gitignore",
    "CoenraadS.disableligatures",
    "cssho.vscode-svgviewer",
    "csstools.postcss",
    "DavidAnson.vscode-markdownlint",
    "dbaeumer.vscode-eslint",
    "devine-davies.make-hidden",
    "dkundel.vscode-npm-source",
    "donjayamanne.githistory",
    "eamodio.toggle-excluded-files",
    "ecmel.vscode-html-css",
    "EditorConfig.EditorConfig",
    "esbenp.prettier-vscode",
    "formulahendry.auto-close-tag",
    "formulahendry.auto-complete-tag",
    "formulahendry.auto-rename-tag",
    "foxundermoon.shell-format",
    "gencer.html-slim-scss-css-class-completion",
    "GitHub.codespaces",
    "GitHub.github-vscode-theme",
    "GitHub.vscode-pull-request-github",
    "hashicorp.terraform",
    "heybourn.headwind",
    "HookyQR.beautify",
    "hoovercj.vscode-power-mode",
    "jakob101.RelativePath",
    "Janne252.fontawesome-autocomplete",
    "jasonnutter.search-node-modules",
    "kisstkondoros.vscode-gutter-preview",
    "letrieu.expand-region",
    "liamhammett.inline-parameters",
    "macieklad.tailwind-sass-syntax",
    "me-dutour-mathieu.vscode-github-actions",
    "mgmcdermott.vscode-language-babel",
    "mhutchie.git-graph",
    "mikestead.dotenv",
    "mrmlnc.vscode-duplicate",
    "mrmlnc.vscode-scss",
    "ms-azuretools.vscode-docker",
    "ms-vscode.js-debug-nightly",
    "ms-vscode.vscode-typescript-next",
    "mutantdino.resourcemonitor",
    "naumovs.color-highlight",
    "patbenatar.advanced-new-file",
    "pflannery.vscode-versionlens",
    "pranaygp.vscode-css-peek",
    "quicktype.quicktype",
    "rangav.vscode-thunder-client",
    "redhat.vscode-yaml",
    "richie5um2.vscode-sort-json",
    "rogalmic.bash-debug",
    "ryu1kn.partial-diff",
    "sdras.night-owl",
    "shd101wyy.markdown-preview-enhanced",
    "sleistner.vscode-fileutils",
    "spywhere.guides",
    "stkb.rewrap",
    "streetsidesoftware.code-spell-checker",
    "stylelint.vscode-stylelint",
    "timonwong.shellcheck",
    "tombonnike.vscode-status-bar-format-toggle",
    "vincaslt.highlight-matching-tag",
    "VisualStudioExptTeam.vscodeintellicode",
    "vscode-icons-team.vscode-icons",
    "WallabyJs.quokka-vscode",
    "wayou.vscode-todo-highlight",
    "wiggin77.codedox",
    "wix.vscode-import-cost",
    "wmaurer.change-case",
    "xyz.local-history"
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "npm install"

  // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  // "remoteUser": "node"
}
