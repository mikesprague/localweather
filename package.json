{
  "name": "local-weather",
  "version": "1.7.13",
  "description": "Minimalist local weather app powered by Dark Sky",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./build",
    "dev": "wrangler pages dev -- vite serve",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ver:bump": "npm version --git-tag-version false",
    "ver:patch": "npm run ver:bump -- patch && npm run ver:tag && npm run ver:publish",
    "ver:minor": "npm run ver:bump -- minor && npm run ver:tag && npm run ver:publish",
    "ver:major": "npm run ver:bump -- major && npm run ver:tag && npm run ver:publish",
    "ver:publish": "git push --all && git push --tags",
    "ver:tag": "APP_VERSION=$(node -e 'console.log(process.env.npm_package_version)') && git add package.json package-lock.json && git commit -m \":bookmark: Bump version v$APP_VERSION\" && git tag $APP_VERSION -m \"Bump version v$APP_VERSION\""
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather-io"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather-io/issues"
  },
  "homepage": "https://localweather.io",
  "dependencies": {
    "@bugsnag/js": "^7.18.0",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/pro-duotone-svg-icons": "^6.2.0",
    "@sweetalert2/theme-dark": "^5.0.12",
    "axios": "^0.27.2",
    "bulma": "^0.9.4",
    "bulma-switch": "^2.0.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.3",
    "logrocket": "^3.0.1",
    "register-service-worker": "^1.7.2",
    "sweetalert2": "^11.4.35",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@babel/eslint-plugin": "7.19.1",
    "@babel/preset-env": "7.19.3",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "cssnano": "^5.1.13",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-stylelint": "17.0.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.5.0",
    "postcss": "^8.4.17",
    "postcss-cli": "10.0.0",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.55.0",
    "stylelint": "14.13.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard": "28.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-prettier": "2.0.0",
    "vite": "3.1.4",
    "vite-plugin-html": "3.2.0",
    "vite-plugin-pwa": "0.13.1",
    "wrangler": "2.1.9"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ],
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 10"
    ]
  },
  "eslintConfig": {
    "settings": {
      "jest": {
        "version": 28
      }
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "stylelint"
    ],
    "plugins": [
      "babel",
      "compat",
      "html",
      "import",
      "prettier"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "node/no-unpublished-import": "warn",
      "node/no-missing-import": "warn"
    },
    "ignorePatterns": [
      "dist/",
      ".history/",
      "node_modules/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "tabWidth": 2
  }
}
