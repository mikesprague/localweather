{
  "name": "localweather",
  "version": "1.10.6",
  "description": "Minimalist local weather app powered by Visual Crossing",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 18.x",
    "npm": ">= 8.x"
  },
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./build",
    "dev": "wrangler pages dev -- vite serve",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ver:bump": "npm version --git-tag-version false",
    "ver:patch": "npm run ver:bump -- patch && npm run ver:tag && npm run ver:publish",
    "ver:minor": "npm run ver:bump -- minor && npm run ver:tag && npm run ver:publish",
    "ver:major": "npm run ver:bump -- major && npm run ver:tag && npm run ver:publish",
    "ver:publish": "git push --all && git push --tags",
    "ver:tag": "APP_VERSION=$(node -e 'console.log(process.env.npm_package_version)') && git add package.json package-lock.json && git commit -m \"chore(release): ðŸ”– bump version v$APP_VERSION\" && git tag $APP_VERSION -m \"chore(release): ðŸ”– bump version v$APP_VERSION\""
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather/issues"
  },
  "homepage": "https://localweather.dev",
  "dependencies": {
    "@bugsnag/js": "8.0.0",
    "@fortawesome/fontawesome-svg-core": "6.4.2",
    "@fortawesome/pro-duotone-svg-icons": "6.4.2",
    "@sweetalert2/theme-dark": "5.0.18",
    "axios": "1.7.7",
    "bulma": "1.0.2",
    "bulma-switch": "2.0.4",
    "cross-env": "7.0.3",
    "dayjs": "1.11.13",
    "dotenv": "16.4.5",
    "logrocket": "9.0.0",
    "register-service-worker": "1.7.2",
    "sweetalert2": "11.14.0",
    "tippy.js": "6.3.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@fullhuman/postcss-purgecss": "6.0.0",
    "autoprefixer": "10.4.20",
    "concurrently": "9.0.1",
    "cssnano": "7.0.6",
    "cz-git": "1.9.4",
    "postcss": "8.4.47",
    "postcss-cli": "11.0.0",
    "sass": "1.79.1",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-config-standard-scss": "11.1.0",
    "vite": "5.4.6",
    "vite-plugin-html": "3.2.2",
    "vite-plugin-pwa": "0.20.5",
    "wrangler": "3.78.6"
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ],
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 10"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
