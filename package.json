{
  "name": "local-weather",
  "version": "1.1.12",
  "description": "Minimalist local weather app powered by Dark Sky",
  "private": true,
  "engines": {
    "node": ">= 14.x",
    "npm": ">= 6.x",
    "yarn": ">= 1.22.x"
  },
  "scripts": {
    "build": "yarn webpack && yarn lambda:build",
    "prebuild": "yarn clean",
    "clean": "rm -rf ./public && rm -rf ./lambda",
    "serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "start": "yarn serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ver:bump": "yarn version --no-git-tag-version",
    "ver:patch": "yarn ver:bump --patch && yarn ver:tag && yarn ver:publish",
    "ver:minor": "yarn ver:bump --minor && yarn ver:tag && yarn ver:publish",
    "ver:major": "yarn ver:bump --major && yarn ver:tag && yarn ver:publish",
    "ver:publish": "git push --all && git push --tags",
    "ver:tag": "APP_VERSION=$(node -e 'console.log(process.env.npm_package_version)') && git add package.json && git commit -s -m \":bookmark: Bump version v$APP_VERSION\" && git tag $APP_VERSION -s -m \"Bump version v$APP_VERSION\"",
    "webpack": "cross-env NODE_ENV=production webpack --color",
    "webpack:dev": "cross-env NODE_ENV=development webpack --color",
    "webpack:serve": "cross-env NODE_ENV=development webpack serve",
    "lambda:build": "netlify-lambda build ./src/functions",
    "lambda:serve": "netlify-lambda serve ./src/functions --config ./webpack.functions.js",
    "snyk-protect": "snyk protect",
    "prepublish": "yarn snyk-protect"
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather-io"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather-io/issues"
  },
  "homepage": "https://localweather.io",
  "dependencies": {
    "@bugsnag/js": "^7.10.5",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/pro-duotone-svg-icons": "^5.15.3",
    "@sweetalert2/theme-dark": "^5.0.1",
    "axios": "^0.21.1",
    "bulma": "^0.9.3",
    "bulma-switch": "^2.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.6",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "logrocket": "^1.3.0",
    "register-service-worker": "^1.7.2",
    "snyk": "^1.662.0",
    "sweetalert2": "^11.0.18",
    "tippy.js": "^6.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-object-assign": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/runtime": "^7.14.6",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@popperjs/core": "^2.9.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "compression-webpack-plugin": "^8.0.1",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.1.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-compat": "^3.11.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.1.0",
    "netlify-cli": "^4.4.2",
    "netlify-lambda": "^2.0.11",
    "node-sass": "^6.0.1",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "prettier-eslint": "^12.0.0",
    "prettier-stylelint": "^0.4.2",
    "sass-lint": "^1.13.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.1.0",
    "terser-webpack-plugin": "^5.1.4",
    "typescript": "^4.3.5",
    "webpack": "^5.45.1",
    "webpack-bugsnag-plugins": "^1.8.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "3.11.2",
    "workbox-webpack-plugin": "^6.1.5"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-object-assign",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ],
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 10"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "markdown",
      "prettier",
      "security"
    ],
    "parserOptions": {
      "parser": "babel-parser",
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "curly": "error",
      "object-curly-newline": "error",
      "semi": "error",
      "prefer-arrow-callback": "warn",
      "arrow-spacing": "error",
      "no-param-reassign": "warn",
      "eqeqeq": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 120,
          "tabWidth": 4,
          "ignoreUrls": true
        }
      ],
      "import/no-cycle": [
        "warn",
        {
          "maxDepth": 1
        }
      ],
      "import/prefer-default-export": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2,
    "plugins": [
      "all"
    ],
    "printWidth": 120
  },
  "snyk": true
}
