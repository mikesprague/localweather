{
  "name": "localweather",
  "version": "1.10.7",
  "description": "Minimalist local weather app powered by Visual Crossing",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 22.x",
    "npm": ">= 10.x"
  },
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./build",
    "dev": "wrangler pages dev -- vite serve",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ver:bump": "npm version --git-tag-version false",
    "ver:patch": "npm run ver:bump -- patch && npm run ver:tag && npm run ver:publish",
    "ver:minor": "npm run ver:bump -- minor && npm run ver:tag && npm run ver:publish",
    "ver:major": "npm run ver:bump -- major && npm run ver:tag && npm run ver:publish",
    "ver:publish": "git push --all && git push --tags",
    "ver:tag": "APP_VERSION=$(node -e 'console.log(process.env.npm_package_version)') && git add package.json package-lock.json && git commit -m \"chore(release): ðŸ”– bump version v$APP_VERSION\" && git tag $APP_VERSION -m \"chore(release): ðŸ”– bump version v$APP_VERSION\""
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather/issues"
  },
  "homepage": "https://localweather.dev",
  "dependencies": {
    "@bugsnag/js": "8.6.0",
    "@fortawesome/fontawesome-svg-core": "6.7.2",
    "@fortawesome/pro-duotone-svg-icons": "6.7.2",
    "@sweetalert2/theme-dark": "5.0.27",
    "bulma": "1.0.4",
    "bulma-switch": "2.0.4",
    "cross-env": "10.1.0",
    "dayjs": "1.11.19",
    "dotenv": "17.2.3",
    "logrocket": "11.0.0",
    "register-service-worker": "1.7.2",
    "sweetalert2": "11.26.17",
    "tippy.js": "6.3.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@fullhuman/postcss-purgecss": "7.0.2",
    "autoprefixer": "10.4.23",
    "concurrently": "9.2.1",
    "cssnano": "7.1.2",
    "cz-git": "1.12.0",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "sass": "1.97.2",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1",
    "stylelint-config-standard-scss": "16.0.0",
    "vite": "7.3.1",
    "vite-plugin-html": "3.2.2",
    "vite-plugin-pwa": "1.2.0",
    "wrangler": "4.59.0"
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ],
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 10"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "volta": {
    "node": "23.6.0",
    "npm": "11.0.0"
  }
}
