{
  "name": "localweather",
  "version": "1.10.2",
  "description": "Minimalist local weather app powered by Visual Crossing",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./build",
    "dev": "wrangler pages dev -- vite serve",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ver:bump": "npm version --git-tag-version false",
    "ver:patch": "npm run ver:bump -- patch && npm run ver:tag && npm run ver:publish",
    "ver:minor": "npm run ver:bump -- minor && npm run ver:tag && npm run ver:publish",
    "ver:major": "npm run ver:bump -- major && npm run ver:tag && npm run ver:publish",
    "ver:publish": "git push --all && git push --tags",
    "ver:tag": "APP_VERSION=$(node -e 'console.log(process.env.npm_package_version)') && git add package.json package-lock.json && git commit -m \"chore(release): ðŸ”– bump version v$APP_VERSION\" && git tag $APP_VERSION -m \"chore(release): ðŸ”– bump version v$APP_VERSION\""
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather/issues"
  },
  "homepage": "https://localweather.dev",
  "dependencies": {
    "@bugsnag/js": "^7.21.0",
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/pro-duotone-svg-icons": "^6.4.0",
    "@sweetalert2/theme-dark": "^5.0.15",
    "axios": "^1.5.0",
    "bulma": "^0.9.4",
    "bulma-switch": "^2.0.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "logrocket": "^5.0.1",
    "register-service-worker": "^1.7.2",
    "sweetalert2": "^11.7.27",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.22.15",
    "@babel/eslint-plugin": "7.22.10",
    "@babel/preset-env": "7.22.15",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "cssnano": "^6.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-stylelint": "20.0.0",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "postcss": "^8.4.29",
    "postcss-cli": "10.1.0",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.66.1",
    "stylelint": "15.10.3",
    "stylelint-config-standard": "34.0.0",
    "stylelint-config-standard-scss": "11.0.0",
    "stylelint-prettier": "4.0.2",
    "vite": "4.4.9",
    "vite-plugin-html": "3.2.0",
    "vite-plugin-pwa": "0.16.4",
    "wrangler": "3.7.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ],
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 10"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "stylelint"
    ],
    "plugins": [
      "babel",
      "compat",
      "html",
      "import",
      "prettier"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "node/no-unpublished-import": "warn",
      "node/no-missing-import": "warn"
    },
    "ignorePatterns": [
      "dist/",
      ".history/",
      "node_modules/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "tabWidth": 2
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
